<UserControl x:Class="Personas.ListPersons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type local:Persona}">
            <StackPanel Orientation="Vertical">
                <TextBlock>
                    <Run Text="{Binding Path=Nombre}"/>
                    <Run Text=" - "/>
                    <Run Text="{Binding Path=Edad}"/>
                    <Run Text=" - "/>
                    <Run Text="{Binding Path=Nacionalidad}"/>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>


    <DockPanel Margin="10">
        <ListBox ItemsSource="{Binding Path=ListaPersonas}" SelectedItem="{Binding Path=PersonaSeleccionada}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"></StackPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </DockPanel>
</UserControl>
